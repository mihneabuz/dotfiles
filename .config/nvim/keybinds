general:
	- <C-hjkl> navigate windows
	- <C-arrows> resize windows
	- <S-lh> cycle buffers
	- <leader>q close buffer
	- <leader>w close window
	- <leader>h clear highlight
	- <A-jk> move text visual
	- JK<A-jk> move text block visual
	- <leader>r toggle relative

nvimtree:
	- <leader>o toggle
	- <leader>e focus

treesitter:
	- grr rename
	- gnn selection
	- grn increase selection
	- grm decrease selection

lsp:
	- K hover
	- gk signature
	- gd definition
	- gD declaration
	- gi implementation
	- gr references
	- gl line diagnostics
	- [g next diagnostic
	- ]g prev diagnostic
	- <leader>d diagnostics
	- <leader>f format
	- <leader>ca coda action

telescope:
	- <leader>tt Telescope
	- <leader>tf Telescope files
	- <leader>tg Telescope grep
	- <leader>tc Telescope commands
	- <leader>tv Telescope neovim
	- <leader>tp Telescope projects

bufferline:
	- <leader>b sort buffers

copilot:
	- <leader>co toggle copilot
	- <leader>cp copilot panel
